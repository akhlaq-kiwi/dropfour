	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	     android:id="@+id/scroller"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    
	   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/main_container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		
		
		
		<LinearLayout 
		    android:id="@+id/top_container"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
	
			<ImageView
			    android:id="@+id/image"
			    android:layout_width="50dp"
			    android:layout_height="50dp"/>
		    
		    <TextView
	        android:id="@+id/top_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Hello"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
		    
		    <Button 
		        android:id="@+id/invite_friends"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Invite"
		    />
		    
		    
		</LinearLayout>
		<TextView
	        android:id="@+id/game_invites_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Game Invites" />
		
		
	        <ListView android:id="@+id/game_invites"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:choiceMode="multipleChoice"
		  		android:background="@layout/rounded"
		  		/>
	        
	        <TextView
		        android:id="@+id/your_turn_text"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Your Turn" />
		
		
	        <ListView android:id="@+id/your_turn"
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent"
		  		android:choiceMode="multipleChoice"
		  		android:background="@layout/rounded"/>
	        
	        <TextView
		        android:id="@+id/their_turn_text"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Their Turn" />
		
		
	        <ListView android:id="@+id/their_turn"
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent"
    			android:choiceMode="multipleChoice"
		  		android:background="@layout/rounded"/>
		      
	    
	    <Button
	        android:id="@+id/logout"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="LogOut!"
	        android:width="100dp" />
	
	</LinearLayout>
</ScrollView>